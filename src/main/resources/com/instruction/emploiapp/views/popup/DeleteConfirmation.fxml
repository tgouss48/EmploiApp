<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox fx:id="window" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="CENTER"
      styleClass="dialog-root">

    <HBox styleClass="header-bar" alignment="CENTER">
        <Label text="Confirmation" styleClass="header-title" />
    </HBox>

    <Label fx:id="messageLabel"
           text="Voulez-vous supprimer ?"
           wrapText="true"
           textAlignment="CENTER"
           styleClass="confirmation-message" />

    <HBox alignment="CENTER" spacing="20" styleClass="buttons-container">
        <Button fx:id="ouiButton" text="Oui" styleClass="oui-button" />
        <Button fx:id="nonButton" text="Non" styleClass="non-button" />
    </HBox>

</VBox>
